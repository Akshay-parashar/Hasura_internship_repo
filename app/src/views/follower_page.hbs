<div class="container">

  {{#if followers}}
  <div class="starter-template well wd_50">
    <h1>Followers</h1>
    <div class="row">
      {{#each followers}}
        <div class="col-lg-12 col-md-12 col-sm-12">
          <a href="/user_home/search?username={{this.username}}"><h3>{{this.username}}</h3></a>
        </div>
      {{/each}}
    <div>

  </div>
  {{/if}}

  {{#if no_followers}}
  <div class="starter-template">
    <h1 class="ab_head">You are not followed by anyone yet</h1>
  </div>
  {{/if}}

</div>
