<div class="container">

  <form class="well form-horizontal" action="/users/register" method="post" id="register_form">

    <fieldset>

      <!-- Form Name -->
      <legend>
        <center>
          <h2><b>Registration Form</b></h2></center>
      </legend><br>

      <!-- Text input-->

      <div class="form-group">
        <label class="col-md-4 control-label">Name</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user accent"></i></span>
            <input name="name" placeholder="Your Name" class="form-control" type="text" value="{{data.name}}">
            <span></span>
          </div>
        </div>
        <div class="col-md-4">
          {{#if errors}}
            {{#if errors.name.msg}}
              <div class="alert alert-danger">{{errors.name.msg}}</div>
            {{/if}}
          {{/if}}
        </div>
      </div>

      <!-- Text input-->

      <div class="form-group">
        <label class="col-md-4 control-label">Username</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user accent"></i></span>
            <input name="user_name" placeholder="Username" class="form-control rest_space" type="text" value="{{data.username}}">
            <span></span>
          </div>
        </div>
        <div class="col-md-4">
          {{#if errors}}
              {{#if errors.user_name.msg}}
                <div class="alert alert-danger">{{errors.user_name.msg}}</div>
              {{/if}}
          {{/if}}
          {{#if username_err}}
            <div class="alert alert-danger">{{username_err}}</div>
          {{/if}}
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label">E-Mail</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope accent"></i></span>
            <input name="email" placeholder="For ex: abc@gmail.com" class="form-control" type="email" value="{{data.email}}">
            <span></span>
          </div>
        </div>
        <div class="col-md-4">
          {{#if errors}}
              {{#if errors.email.msg}}
                <div class="alert alert-danger">{{errors.email.msg}}</div>
              {{/if}}
          {{/if}}
          {{#if email_err}}
            <div class="alert alert-danger">{{email_err}}</div>
          {{/if}}
        </div>
      </div>

      <!-- Text input-->

      <div class="form-group">
        <label class="col-md-4 control-label">Password</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock accent"></i></span>
            <input name="user_password" id="usr_pass" placeholder="Password" class="form-control rest_space" type="password">
              <span></span>
          </div>
        </div>

        <div class="col-md-4">
          {{#if errors}}
              {{#if errors.user_password.msg}}
                <div class="alert alert-danger">{{errors.user_password.msg}}</div>
              {{/if}}
          {{/if}}
          {{#if pass_err}}
            <div class="alert alert-danger">{{pass_err}}</div>
          {{/if}}
        </div>
      </div>

      <!-- Text input-->

      <div class="form-group">
        <label class="col-md-4 control-label">Confirm Password</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock accent"></i></span>
            <input name="confirm_password" placeholder="Confirm Password" class="form-control rest_space" type="password">
            <span></span>
          </div>
        </div>
        <div class="col-md-4">
          {{#if errors}}
            {{#if errors.confirm_password.msg}}
              <div class="alert alert-danger">{{errors.confirm_password.msg}}</div>
            {{/if}}
          {{/if}}
        </div>
      </div>

      <!-- Success message -->
      <!-- <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Success!.</div> -->

      <!-- Button -->
      <div class="form-group">
        <label class="col-md-4 control-label"></label>
        <div class="col-md-4 center-block"><br>
          <button type="submit" class="btn btn-success center-block">SUBMIT <span class="glyphicon glyphicon-send "></span></button>
        </div>

      </div>


    </fieldset>
  </form>
</div>
</div>
<!-- /.container -->
